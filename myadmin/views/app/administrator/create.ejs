<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>
<div class="col-sm-6">
    <h4 class="page-title">Administrators Management</h4>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/administrators">Administrators</a></li>
        <li class="breadcrumb-item">Create</li>
    </ol>
</div>

<%- contentFor('body') %>
<div class="row">
    <div class="col-lg-12">
        <div class="card px-4 py-2">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title">Create Administrator</h5>
            </div>

            <form action="/administrators/create" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="<%= old('name') %>" required>
                    <p class="color-red mt-2"><%= errors('name') %></p>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" value="<%= old('email') %>" required>
                    <p class="color-red mt-2"><%= errors('email') %></p>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required>
                    <p class="color-red mt-2"><%= errors('password') %></p>
                </div>

                <div class="form-group mb-0">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- contentFor('FooterJs') %>

<%- contentFor('BottomJs') %>
